// Todo o schema do banco é modelado aqui, lembre-se de gerar uma migration
// caso seja necessario realizar alguma alteração.
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Comando para criar a migration: yarn prisma migrate dev
model User {
  id String @id @default(uuid())
  name String
  nickname String
  password String
  email String
  role Role @default(USER)
  excluded Boolean?
  password_reset Boolean?
  agreement_date DateTime? @default(now())
  last_notice DateTime? @default(now())
  last_password_update DateTime? @default(now())

  @@map("users")
  inssues Inssue[]
}

model Inssue {
  id String @id @default(uuid())
  title String
  information String
  status InssueStatus?
  draft Boolean @default(true)
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  
  users User @relation(fields: [user_id], references: [id])

  @@map("inssues")
  user_id String
}

// ENUMS
enum Role {
  USER
  ADMIN
}

enum InssueStatus {
  RESOLVED
  INPROGRESS
  CLOSED
}